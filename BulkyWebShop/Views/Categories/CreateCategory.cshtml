@model Category

<div class="container mt-4 p-3 border rounded-2">
    <form method="post">
        <div class="row">
            <h2 class="text-primary mb-0">Create category</h2>
        </div>
        <div asp-validation-summary="All" class="mt-2"></div>
        <hr/>
        <div class="mb-2">
            <label asp-for="Name" class="mb-1"></label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="mb-1"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6 col-md-4">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-4">
                <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to the list
                </a>
            </div>
        </div>
    </form>
</div>