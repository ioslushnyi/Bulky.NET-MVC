@model List<Category>

<div class="container mb-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="CreateCategory" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category name
            </th>
            <th>
                Disaply Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@cat.Name</td>
                <td>@cat.DisplayOrder</td>
            </tr>

        }
    </tbody>
</table>