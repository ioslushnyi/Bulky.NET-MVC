@model List<Category>

<div class="container mb-4 mt-4 p-3 border rounded-2">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary mb-0">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="CreateCategory"class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create category
            </a>
        </div>
    </div>
    <hr/>
    <table class="table table-bordered table-striped mt-3 mb-1">
        <thead>
            <tr>
                <th>
                    Category name
                </th>
                <th>
                    Disaply Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@cat.Name</td>
                    <td>@cat.DisplayOrder</td>
                    <td>
                        <div class="w-100 btn-group " role="group">
                            <a asp-controller="Categories" asp-action="EditCategory" class="btn btn-info mx-2 rounded-2">
                                <i class="bi-pencil-square"></i>&nbsp;Edit
                            </a>
                            <a asp-controller="Categories" asp-action="DeleteCategory" class="btn btn-secondary mx-2 rounded-2">
                                <i class="bi-trash-fill"></i>&nbsp;Delete
                            </a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

